datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Farm {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  farmName       String
  city           String
  state          String
  totalArea      String
  cultivableArea String
  vegetationArea String
  crops          String
  producerId     String   @db.ObjectId
  updated_at     DateTime @updatedAt
  producer       Producer @relation("ProducerFarms", fields: [producerId], references: [id])
}

model Producer {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  document   String   @unique
  name       String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
  farms      Farm[]   @relation("ProducerFarms")
}
